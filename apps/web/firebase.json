{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log"
			],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"emulators": {
		"functions": {
			"port": 5001,
			"host": "0.0.0.0"
		},
		"firestore": {
			"port": 8080,
			"host": "0.0.0.0"
		},
		"auth": {
			"port": 9099,
			"host": "0.0.0.0"
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true
	}
}